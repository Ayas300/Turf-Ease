# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL for CORS configuration
# Development: http://localhost:5173
# Production: https://your-frontend-app.vercel.app or https://your-frontend-app.netlify.app
FRONTEND_URL=http://localhost:5173

# Database - MongoDB Atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority&appName=<appName>
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/turfease_production?retryWrites=true&w=majority&appName=Cluster0
DB_NAME=turfease_production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Payment Gateway (if needed)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379